@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<h3>Kategoriler</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ADI</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td><button class="btn btn-danger">Sil</button></td>
            <td><button class="btn btn-warning">Güncelle</button></td>
            <td><button class="btn btn-primary">Başlıklar</button></td>
        </tr>
    }



</table>
<a href="/Category/AddCategory/" class="btn btn-info">Yeni Kategori</a>
<button class="btn btn-warning">Kategori Listesi</button>
<button class="btn btn-danger">Kategori Açıklamaları</button>